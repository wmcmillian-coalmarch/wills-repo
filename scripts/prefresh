#!/bin/bash

set -e

if [ -z "$1" ]
then
        ROOT=$(drush ev "print DRUPAL_ROOT");
        SITE=${ROOT##*/}
else
        SITE=$1
fi;

if [ -z "$2" ]
then
        ENV="dev"
else
        ENV=$2
fi;


if [ "$SITE" = "live" ] || [ "$SITE" = "dev" ] || [ "$SITE" = "test" ]
then
    ENV=$SITE
    ROOT=$(drush ev "print DRUPAL_ROOT");
    SITE=${ROOT##*/}
fi;

cd $HOME/Sites/$SITE
terminus site wake --site=$SITE --env=$ENV &&
git pull &&
terminus-ssp $SITE $ENV &&
drushfiles $SITE $ENV