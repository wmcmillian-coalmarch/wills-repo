#!/bin/bash

set -e

source ${HOME}/bin/getSiteEnv.sh;

if [ -f ~/Sites/$SITE/core/lib/Drupal.php ]
then
    DRUPALV=8
else
    DRUPALV=7
fi;

notfound="Not found:.*"
if [[ $(drush sa @pantheon.$SITE.$ENV 2>&1) =~ $notfound ]]; then
    echo "Alias @pantheon.$SITE.$ENV not found!"
    echo "refreshing aliases.."
    if [ "$TERMINUS_OLD" = true ]; then
        terminus sites aliases
    else
        terminus aliases
    fi
fi

cd ~/Sites/$SITE/sites/default;
if [ "$DRUPALV" = "7" ]; then
    drush cc all
else
    drush cr
fi
if [ ! -d "files" ]; then
    mkdir files
fi
chmod -R 777 files

SITEID=$(terminus site:info $SITE --field=ID);
rsync -rvlzhi   --copy-unsafe-links --size-only --checksum --ipv4 --progress -e 'ssh -p 2222' $ENV.$SITEID@appserver.$ENV.$SITEID.drush.in:files/ files
echo "DONE!"
chmod -R 777 files/;
cd -;
osascript -e "display notification \"Files synced for $SITE\" with title \"Files Synced!\"";
#say "files synced";
